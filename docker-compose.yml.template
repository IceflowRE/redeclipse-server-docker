version: '3.8'

services:
    <name>:
        image: iceflower/redeclipse-server:<tag>
        build:
            dockerfile: <dockerfile>
            args:
                TAG: <git reference>
                RE_COMMIT: ignore
                ALPINE_SHA: ignore
                DOCKERFILE_SHA: ignore
        ports:
            - "<serverport>:<serverport>/udp"
            - "<serverport + 1>:<serverport + 1>/udp"
        restart: unless-stopped
        volumes:
            - type: bind
              source: <re home dir>
              target: /re-server-config/home
              read_only: true
            - type: bind
              source: <re package dir>
              target: /re-server-config/package
              read_only: true
            - type: bind
              source: <sauerbraten dir>
              target: /re-server-config/sauer
              read_only: true
        logging:
            options:
                max-size: "2000k"
                max-file: "10"
